<div class="main-sidebar">
    <!-- Inner sidebar -->
    <div class="sidebar">
      <!-- user panel (Optional) -->
      <div class="user-panel">
        <div class="pull-left image">
          <img src="/dist/img/user2-160x160.jpg" class="img-circle"
          alt="User Image" style="max-width: none; margin-left: 10%"/>
        </div>
        <div class="pull-left info">
        </div>
      </div><!-- /.user-panel -->

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu">
        <!-- Optionally, you can add icons to the links -->
        <li class="view-profile"><a href="/home"><span>Ver Perfil</span></a><</li>
        <li class="edit-profile"><a href="/Users/edit"><span>Editar Perfil</span></a><</li>
        <li class="view-cv"><a href="#"><span>Ver CV</span></a><</li>
        <li class="edit-professional-info"><a href="#"><span>Editar Informacion Profesional</span></a><</li>
        <li class="edit-template"><a href="#"><span>Cambiar Tema</span></a><</li>
        <% if (user.is_admin) { %>
            <li class="edit-template"><a href="/admin/edit_template"><span>Editar Tema</span></a></li>
        <% } %>
      </ul><!-- /.sidebar-menu -->

    </div><!-- /.sidebar -->
</div><!-- /.main-sidebar -->

<% if (typeof activeMenuItem !== 'undefined') { %>
    <script type='text/javascript'>
        $(document).ready(function() {
            var c = '<%= activeMenuItem %>';
            $('.sidebar-menu .'+ c).addClass('active');
        });
    </script>
<% } %>

